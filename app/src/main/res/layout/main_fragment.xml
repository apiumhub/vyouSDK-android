<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <ImageView
        android:id="@+id/mainTenantLogoIv"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/image_error_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"/>

    <Button
        android:id="@+id/mainAuthBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:text="Authenticate with VYou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTenantLogoIv" />

    <Button
        android:id="@+id/mainGoogleSingInBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Authenticate with Google"
        app:layout_constraintEnd_toEndOf="@id/mainAuthBtn"
        app:layout_constraintStart_toStartOf="@id/mainAuthBtn"
        app:layout_constraintTop_toBottomOf="@id/mainAuthBtn" />

    <Button
        android:id="@+id/mainFbSignInBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Authenticate with Facebook"
        app:layout_constraintEnd_toEndOf="@id/mainAuthBtn"
        app:layout_constraintStart_toStartOf="@id/mainAuthBtn"
        app:layout_constraintTop_toBottomOf="@id/mainGoogleSingInBtn" />

    <Button
        android:id="@+id/mainRegisterBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Register user"
        app:layout_constraintEnd_toEndOf="@id/mainAuthBtn"
        app:layout_constraintStart_toStartOf="@id/mainAuthBtn"
        app:layout_constraintTop_toBottomOf="@id/mainFbSignInBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>